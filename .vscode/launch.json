{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // Flask debugger configuration
        {
            "name": "Flask Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_APP": "start.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Run start with debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "start.py",
            "console": "integratedTerminal"
        }
    ]
}